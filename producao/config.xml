<?xml version='1.0' encoding='utf-8'?>
<widget id="com.julianaoliveira.producao" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Produção</name>
    <description>Sample Apache Cordova App</description>
    <author email="dev@cordova.apache.org" href="https://cordova.apache.org">
        Apache Cordova Team
    </author>
    <icon src="res/icon.png" />

    <preference name="SplashScreen" value="screnn" />
    <splash src="res/splash.png" />
    <preference name="SplashScreen" value="3000" />
    <preference name="SplashMaintainAspectRatio" value="true"/>

    <preference name="Fullscreen" value="true" />
    
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
</widget>
